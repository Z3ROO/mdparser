{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist/esm",
    "module":"ES2020",
    "declaration": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "config",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}